@model AppModel.Models.Book

@{
    ViewData["Title"] = "Details Book";
}

<h2>Book Details #@Model.PublisherId</h2>

<form class="mt-4">
    <div class="form-group">
        <label asp-for="BookId" class="control-label">Book Id</label>
        <input asp-for="BookId" class="form-control" disabled />
        <input asp-for="BookId" type="hidden" value="@Model.BookId" />
    </div>

    <div class="form-group">
        <label asp-for="Title" class="control-label">Title</label>
        <input asp-for="Title" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Genre" class="control-label">Genre</label>
        <input asp-for="Genre" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="PublicationYear" class="control-label">Publication Year</label>
        <input asp-for="PublicationYear" class="form-control" type="number" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Publisher.Name" class="control-label">Publisher Name</label>
        <select asp-for="Publisher.Name" class="form-select" aria-label="Default select example" disabled>
            <option selected>@Model.Publisher.Name</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="BookAuthors" class="control-label">Book Authors</label>
        <select asp-for="BookAuthors" class="form-select" id="multiple-select-field" data-placeholder="Choose anything" multiple disabled>
            @foreach (var bookAuthor in Model.BookAuthors)
            {
                <option selected="selected">
                    @bookAuthor.Author?.FirstName
                    @bookAuthor.Author?.LastName
                </option>
            }
        </select>
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#multiple-select-field').select2({
                theme: "bootstrap-5",
                placeholder: "Choose anything",
                closeOnSelect: false
            });
        });
    </script>
}
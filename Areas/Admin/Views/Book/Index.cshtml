@model List<Book>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="text-center">
    <h1 class="display-4">Books</h1>
</div>
<div class="container">
    <div class="row justify-content-end">
        <div class="col-1">
            <a asp-action="Create" class="btn btn-primary">Create</a>
        </div>
    </div>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Genre</th>
            <th>Publication Year</th>
            <th>Books Published</th>
            <th>Book Authors</th>
            <th>Publisher</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.BookId</td>
                <td>@book.Title</td>
                <td>@book.Genre</td>
                <td>@book.PublicationYear</td>
                <td>
                    @foreach (var bookAuthor in book.BookAuthors)
                    {
                        @bookAuthor.Author?.FirstName
                        @Html.Raw("&nbsp;")
                        @bookAuthor.Author?.LastName
                        <br />
                    }
                </td>
                <td>@book.Publisher?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@book.BookId" class="btn btn-secondary">Details</a>
                    <a asp-action="Edit" asp-route-id="@book.BookId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@book.BookId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

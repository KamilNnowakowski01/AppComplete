@model List<Author>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="text-center">
    <h1 class="display-4">Authors</h1>
</div>
<div class="container">
    <div class="row justify-content-end">
        <div class="col-1">
            <a asp-action="Create" class="btn btn-primary">Create</a>
        </div>
    </div>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date Of Birth</th>
            <th>Country Of Origin</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.AuthorId</td>
                <td>@author.FirstName</td>
                <td>@author.LastName</td>
                <td>@author.DateOfBirth</td>
                <td>@author.CountryOfOrigin</td>
                <td>
                    <a asp-action="Details" asp-route-id="@author.AuthorId" class="btn btn-secondary">Details</a>
                    <a asp-action="Edit" asp-route-id="@author.AuthorId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@author.AuthorId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

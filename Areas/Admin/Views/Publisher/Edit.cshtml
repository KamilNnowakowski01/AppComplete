@model AppModel.Models.Publisher

@{
    ViewData["Title"] = "Edit Publisher";
}

<h2>Publisher Details</h2>

<form asp-action="Edit" method="post" class="mt-4">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="PublisherId" class="control-label">Publisher Id</label>
        <input asp-for="PublisherId" class="form-control" disabled/>
        <input asp-for="PublisherId" type="hidden" value="@Model.PublisherId" />
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address" class="control-label">Address</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="YearFounded" class="control-label">Year Founded</label>
        <input asp-for="YearFounded" class="form-control" type="number" />
        <span asp-validation-for="YearFounded" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Edit</button>
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
